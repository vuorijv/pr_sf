<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="mybets.result.admin.sports" class="Mybets\ResultBundle\Admin\SportAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Admin" label="Sport"/>
            <argument />
            <argument>Mybets\ResultBundle\Entity\Sport</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>
        <service id="mybets.result.admin.league" class="Mybets\ResultBundle\Admin\LeagueAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Admin" label="League"/>
            <argument />
            <argument>Mybets\ResultBundle\Entity\League</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>
        <service id="mybets.result.admin.tournament" class="Mybets\ResultBundle\Admin\TournamentAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Admin" label="Tournament"/>
            <argument />
            <argument>Mybets\ResultBundle\Entity\Tournament</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>
    </services>
</container>